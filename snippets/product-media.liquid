{%- case media.media_type -%}
  {%- when 'image' -%}
    <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="object-contain w-full h-full">
  {%- when 'video' -%}
    {{ media | video_tag: controls: true, class: 'object-contain w-full h-full' }}
  {%- when 'external_video' -%}
    {{ media | external_video_tag: class: 'object-contain w-full h-full' }}
  {%- when 'model' -%}
    {{ media | model_viewer_tag }}
  {%- else -%}
    {{ media | media_tag: class: 'object-contain w-full h-full' }}
{%- endcase -%}
