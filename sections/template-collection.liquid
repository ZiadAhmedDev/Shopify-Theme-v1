<div class="px-4 py-8">
  <h1 class="block my-4 text-4xl font-bold text-center">{{ collection.title }}</h1>
  {%- paginate collection.products by section.settings.count_item_per_page -%}
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        {%- for product in collection.products -%}
          {%- render 'product-card', product: product -%}
        {%- endfor -%}
      </div>
    </div>
    {% render 'pagination', pagination: paginate %}
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "Template settings",
  "settings": [
    {
      "type": "range",
      "label": "Count item per page",
      "id": "count_item_per_page",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ]
}
{% endschema %}
