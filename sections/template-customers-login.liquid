<div
  class="flex justify-center h-full px-6 py-12 mx-auto lg:px-8 align-center"
  x-data="{ loginForm: true , pwRecoveryForm: false  }"
>
  <div class="w-full max-w-md space-y-8" x-show="loginForm">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">Sign in to your account</h2>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {%- if form.errors -%}
          <div class="relative px-4 py-3 text-red-700 bg-red-100 border border-red-400 rounded">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">{{ form.errors | default_errors }}</span>
          </div>
        {%- endif -%}
        <div class="my-2">
          <label for="customer_email" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            placeholder="Email"
            autocomplete="email"
            id="customer_email"
            class="w-full px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:bg-white focus:border-gray-500"
          >
        </div>
        <div class="my-2">
          <label for="customer_Password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            placeholder="Password"
            autocomplete="current-password"
            id="customer_Password"
            class="w-full px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:bg-white focus:border-gray-500"
          >
        </div>
        <div class="my-3 text-sm" x-on:click="pwRecoveryForm = true , loginForm = false">
          <a href="#" class="font-medium text-blue-600 underline hover:text-blue-500">Forgot your password?</a>
        </div>
        <div class="my-2">
          <button
            type="submit"
            class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400"
          >
            Sign in
          </button>
        </div>
      {% endform %}
    </div>
  </div>
  <div class="w-full max-w-md space-y-8" x-show="pwRecoveryForm">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">Recover your account</h2>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {%- if form.errors -%}
          <div class="relative px-4 py-3 text-red-700 bg-red-100 border border-red-400 rounded">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">{{ form.errors | default_errors }}</span>
          </div>
        {%- endif -%}
        <div class="my-2">
          <label for="customer_email" class="sr-only">Email address</label>
          <input
            type="email"
            name="email"
            placeholder="Email"
            autocomplete="email"
            id="customer_email"
            class="w-full px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:bg-white focus:border-gray-500"
          >
        </div>
        <div class="my-2">
          <button
            type="submit"
            class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400"
          >
            Recover password
          </button>
        </div>
        <div class="my-2 text-sm" x-on:click="loginForm = true , pwRecoveryForm = false">
          <a href="#" class="font-medium text-blue-600 underline hover:text-blue-500">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>
