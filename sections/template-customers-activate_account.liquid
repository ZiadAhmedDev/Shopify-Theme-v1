<div class="flex flex-col items-center justify-center min-h-full mx-auto">
  <div class="max-w-6xl space-y-4">
    <h1 class="text-2xl font-bold text-gray-700">Activate Account</h1>
    <p class="text-sm leading-relaxed text-gray-400">Create your password to activate your account</p>

    {% form 'customer_activate_account', class: 'w-full px-4 py-2 text-gray-700 border focus:outline-none' %}
      <div class="my-2 password">
        <label for="new_password">Password</label>
        <input
          class="block w-full p-2 outline-none"
          type="password"
          name="customer[password]"
          id="new_password"
          autocomplete="new-password"
        >
      </div>
      <div class="my-2 password">
        <label for="confirm_password">Confirm Password</label>
        <input
          class="block w-full p-2 outline-none"
          type="password"
          name="customer[password_confirmation]"
          id="confirm_password"
        >
      </div>
    {% endform %}
  </div>
</div>
