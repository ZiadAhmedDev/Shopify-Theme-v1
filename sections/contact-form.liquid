<div class="flex flex-col items-center px-4 py-8 mx-auto">
  {%- if page.title != blank -%}
    <h1 class="block my-3 text-3xl font-bold text-center">{{ section.settings.form_title }}</h1>
  {%- endif -%}
  {% form 'contact', class: 'flex flex-col items-center w-2/3 md:w-1/2' %}
    {% if form.errors %}
      <div class="block p-5 border">
        <div class="flex items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="ml-3 text-sm font-medium">Oh no! Your Message is not sent</div>
        </div>
        <ul class="px-4 mb-3 list-decimal ml-7">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex items-center w-full p-5 my-3">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="ml-3 text-sm font-medium">Your Message is posted successfully</div>
      </div>
    {% endif %}

    <div class="flex justify-between w-full gap-2 align-center">
      <div class="w-1/2">
        <label for="FormName">Name</label>
        <input
          class="w-full p-2 border border-gray-400 outline-none md:h-11"
          type="text"
          name="contact[name]"
          id="FormName"
        >
      </div>
      <div class="w-1/2 ">
        <label for="FormEmail">Email</label>
        <input
          class="w-full p-2 border border-gray-400 outline-none md:h-11"
          type="email"
          name="contact[email]"
          id="FormEmail"
        >
      </div>
    </div>
    <div class="w-full my-2">
      <label class="block " for="FormContent">Message</label>
      <textarea
        class="w-full p-2 border border-gray-400 outline-none resize-none md:h-24"
        name="contact[body]"
        id="FormContent"
      ></textarea>
    </div>
    <div class="w-1/4 min-w-fit">
      <input
        class="w-full px-4 py-2 font-bold text-white bg-green-700 rounded outline-none cursor-pointer hover:bg-green-900"
        type="submit"
        value="Send Message"
      >
    </div>
  {% endform -%}
</div>

{% schema %}
{
  "name": "Template Form",
  "settings": [
    {
      "type": "text",
      "label": "Form title",
      "id": "form_title"
    }
  ],
  "presets": [
    {
      "name": "Template Form"
    }
  ]
}
{% endschema %}
