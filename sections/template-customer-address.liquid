      <div class="flex items-center justify-between p-2 mb-2">
        <h2 class="text-lg font-bold text-gray-900">New Address</h2>
        <button x-on:click="AddressForm = false" type="button" class="px-4 py-2 text-black">
          {%- render 'icon-close' -%}
        </button>
      </div>

      {%- form 'customer_address', customer.new_address -%}
