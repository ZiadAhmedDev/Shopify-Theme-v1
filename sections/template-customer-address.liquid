        <div class="mb-2">
          <label for="address_province_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Province</label
          >
          <select
            name="address[province]"
            id="address_province_{{ form.id }}"
            value="{{ form.province }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
            {{ all_province_option_tags }}
          </select>
        </div>

        <div class="mb-2">
          <label for="address_zip_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Postal/ZIP code</label
          >
          <input
            type="text"
            name="address[zip]"
            id="address_zip_{{ form.id }}"
            value="{{ form.zip }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_phone_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Phone number</label
          >
          <input
            type="tel"
            name="address[phone]"
            id="address_phone_{{ form.id }}"
            value="{{ form.phone }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>
        <div class="mb-2">
          {{ form.set_as_default_checkbox }}
          <label for="address_default_address_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Set as default address</label
          >
        </div>
        <div class="flex flex-row gap-2 mb-2">
          <button type="submit" class="w-full px-4 py-2 font-medium text-white bg-gray-700 hover:bg-gray-900">
            Create address
          </button>
          <button
            x-on:click="AddressForm = false"
            type="reset"
            class="w-full px-4 py-2 font-medium text-gray-700 border border-gray-700"
          >
            Cancel
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
  <div class="grid w-full grid-cols-2 gap-4 mx-2 md:grid-cols-3 ">
    {%- paginate customer.addresses by 3 -%}
      {%- for address in customer.addresses -%}
        <div
          class="flex flex-col items-center justify-center p-2 mt-12 text-center border border-gray-200 "
          x-data="{ address_{{ address.id }}: false }"
        >
          {%- if address == customer.default_address -%}
            <div class="flex items-center justify-center w-full h-8 px-4 mb-1 bg-green-500">
              <h3 class="font-bold text-white text-md">Default</h3>
            </div>
          {%- else -%}
            <div class="h-8 mb-1"></div>
          {%- endif -%}
          <div class="h-full my-2">
            <h3>
              {{ address | format_address }}
            </h3>
          </div>
          <div class="flex items-center justify-between w-full gap-2 mx-3 text-center">
            <div class="flex-1">
              <button
                x-on:click="address_{{ address.id }} = true"
                class="w-full px-4 py-2 text-white bg-gray-700 hover:bg-gray-600"
              >
                Edit
              </button>
            </div>
            <div class="flex-1">
              <button
                class="w-full px-4 py-2 text-white bg-gray-700 hover:bg-gray-600"
                data-delete-btn
                data-url="{{ address.url }}"
              >
                Delete
              </button>
            </div>
            <form method="post" action="{{ address.url }}">
              <input type="hidden" name="_method" value="delete">
