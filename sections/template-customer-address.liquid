                    >
                    <select
                      name="address[province]"
                      id="address_province_{{ form.id }}"
                      value="{{ form.province }}"
                      class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
                    >
                      {{ all_province_option_tags }}
