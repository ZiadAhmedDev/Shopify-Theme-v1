          >
          <input
            type="text"
            name="address[last_name]"
            id="address_lname_{{ form.id }}"
            value="{{ form.last_name }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_company_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Company</label
          >
          <input
            type="text"
            name="address[company]"
            id="address_company_{{ form.id }}"
            value="{{ form.company }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_address1_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Address 1</label
          >
          <input
            type="text"
            name="address[address1]"
            id="address_address1_{{ form.id }}"
            value="{{ form.address1 }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_address2_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Address 2</label
          >
          <input
            type="text"
            name="address[address2]"
            id="address_address2_{{ form.id }}"
            value="{{ form.address2 }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_city_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase">City</label>
          <input
            type="text"
            name="address[city]"
            id="address_city_{{ form.id }}"
            value="{{ form.city }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
          >
        </div>

        <div class="mb-2">
          <label for="address_country_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >Country</label
          >
          <select
            name="address[country]"
            id="address_country_{{ form.id }}"
            value="{{ form.country }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
            data-country-selector
            data-id="{{ form.id }}"
          >
            {{ all_country_option_tags }}
