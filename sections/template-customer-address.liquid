          <label for="address_fname_{{ form.id }}" class="mb-2 text-xs font-medium text-gray-700 uppercase"
            >First name</label
          >
          <input
            type="text"
            name="address[first_name]"
            id="address_fname_{{ form.id }}"
            value="{{ form.first_name }}"
            class="w-full px-4 py-1 text-gray-700 border focus:outline-none"
