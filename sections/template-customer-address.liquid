<div class="max-w-6xl mx-auto my-8 " x-data="{ AddressForm: false }">
  <div class="flex flex-col items-center justify-between w-full md:flex-row">
    <h1 class="text-2xl font-bold text-gray-700">Address</h1>
    <button
      type="button"
      class="px-4 py-2 text-white bg-gray-700 cursor-pointer hover:bg-gray-600"
      x-on:click="AddressForm = true"
    >
      Create new address
    </button>
    <a href="{{ routes.account_url }}" class="text-blue-600 underline hover:text-blue-900">Back to Account</a>
  </div>
  <div x-show="AddressForm" class="fixed inset-0 z-50 w-full h-full overflow-y-hidden bg-gray-600 bg-opacity-50">
